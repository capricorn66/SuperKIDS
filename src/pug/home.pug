            nav: [
                {label: 'Mój profil', img: 'profile.svg'},
                {label: 'Nagrody na dzisiaj', img: 'cup.svg'},
                {label: 'Nagrody Specjalne', img: 'star.svg'},
                {label: 'Historia zakupów', img: 'bag.svg'}
