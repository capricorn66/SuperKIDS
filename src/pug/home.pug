                                    .bg-blue-900.rounded-lg.text-white.text-xl.font-bold.w-10.h-10.flex.items-center.justify-center.mr-3(class="font-['Montserrat']") 1
                                    div
                                        .text-lg.font-bold.leading-tight Czas na komputer
                                        .text-md.text-orange-500 1h - 100 pkt
                                    +button({
                                        type: "button",
                                        size: 'h-10 px-6',
                                        variant: "bg-orange-500 text-blue-900 text-lg font-bold",
                                        label: 'Kup'
                                    }).ml-auto.drop-shadow-lg
                                .flex.items-center.py-3(class="border-b border-blue-100/50")
                                    .bg-blue-900.rounded-lg.text-white.text-xl.font-bold.w-10.h-10.flex.items-center.justify-center.mr-3(class="font-['Montserrat']") 2
